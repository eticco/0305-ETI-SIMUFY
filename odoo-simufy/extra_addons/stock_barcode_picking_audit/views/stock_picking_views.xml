<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_picking_form_inh" model="ir.ui.view">
        <field name="name">view.picking.form.inh</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="user_prepared_by_ids" widget="many2many_tags_avatar" />
            </field>
        </field>
    </record>


    <record id="view_picking_internal_search_inh" model="ir.ui.view">
        <field name="name">view.picking.internal.search.inh</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Preparado por Usuario" name="user_prepared_by_ids" domain="[]" context="{'group_by': 'user_prepared_by_ids'}"/>
            </xpath>
        </field>
    </record>

    <record id="stock_barcode.stock_picking_action_form" model="ir.actions.act_window">
        <field name="context">{
            'from_barcode': True
        }</field>
    </record>

    <record id="stock_barcode.stock_picking_action_kanban" model="ir.actions.act_window">
        <field name="context">{
            'from_barcode': True
        }</field>
    </record>

</odoo>
