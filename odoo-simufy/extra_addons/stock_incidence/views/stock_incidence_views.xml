<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_incidence_tree_view" model="ir.ui.view">
        <field name="name">stock_incidence_tree_view</field>
        <field name="model">stock.incidence</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="Incidencias" create="true" delete="true" edit="true" editable="bottom">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="stock_incidence_action_view" model="ir.actions.act_window">
        <field name="name">Incidencias</field>
        <field name="res_model">stock.incidence</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="stock_incidence_tree_view"/>
        <field name="target">main</field>
    </record>

    <menuitem id="menu_stock_incidence" name="Incidencias" parent="stock.menu_delivery" action="stock_incidence_action_view"/>


</odoo>
