<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_incidence_wizard_form_view" model="ir.ui.view">
        <field name="name">stock.incidence.wizard.form.view</field>
        <field name="model">stock.incidence.wizard</field>
        <field name="arch" type="xml">
            <form>

                <group>
                    <field name="picking_id" invisible="1" />

                    <field name="incidence_id" />

                    <field name="incidence_date" />
                </group>

                <footer>
                    <button string="Registrar" name="do_action" type="object" class="oe_highlight"/>
                    <button string="Cancelar" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_incidence_wizard_action_view" model="ir.actions.act_window">
        <field name="name">Registrar Incidencia</field>
        <field name="res_model">stock.incidence.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

